{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "build",
    "allowJs": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node"
  },
  "include": [
    "./**/*.ts",
    "./**/*.js",
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "build"
  ]
}